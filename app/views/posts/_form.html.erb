<!-- form_for 헬퍼는 multipart/form-data를 알아서 처리해줌-->
<%= form_for(post) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", placeholder: "Content", rows: "10" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <%= yield f %>
<% end %>